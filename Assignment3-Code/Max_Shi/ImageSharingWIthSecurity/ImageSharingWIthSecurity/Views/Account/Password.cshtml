@{
    ViewBag.Title = "Update Password";
}

<h2>@ViewBag.Title</h2>

@model  ImageSharingWithSecurity.Models.LocalPasswordModel

<form method="post" asp-action="Password" asp-controller="Account">

    <fieldset>
        <legend>Update Your Password</legend>
        <p>
            <label asp-for="OldPassword">Old Password: </label>
            <input asp-for="OldPassword" />
            <span asp-validation-for="OldPassword" />
        </p>
        <p>
            <label asp-for="NewPassword">New Password:</label>
            <input asp-for="NewPassword" />
            <span asp-validation-for="NewPassword" />
        </p>
        <p>
            <label asp-for="ConfirmPassword">Confirm Password:</label>
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </p>
        <p>
            <input type="submit" value="Update" />
        </p>
    </fieldset>

    <p>@ViewBag.Message</p>
    <p><div class="text-danger" asp-validation-summary="ModelOnly"></div></p>

</form>